<playerRect>:
    bgcolor: 1,1,1,1
    size_hint : None, None
    size: [app.spriteSize, app.spriteSize]
    pos: [x for x in self.coord]
    canvas:
        Color
            rgba: self.bgcolor
        Rectangle
            pos: self.pos
            size: self.size

<monsterRect>:
    bgcolor: 1,0,0,1
    size_hint : None, None
    size: [app.spriteSize, app.spriteSize]
    pos: [x for x in self.coord]
    canvas:
        Color
            rgba: self.bgcolor
        Rectangle
            pos: self.pos
            size: self.size

<wallRect>:
    bgcolor: 0.3, 0.3 , 0.3, 1
    size_hint : None, None
    size: [app.spriteSize, app.spriteSize]
    pos: [x for x in self.coord]
    canvas:
        Color
            rgba: self.bgcolor
        Rectangle
            pos: self.pos
            size: self.size

<foodRect>:
    bgcolor: 0,1,0,1
    size_hint : None, None
    size: [app.spriteSize * 0.6, app.spriteSize * 0.6]
    pos: [x for x in self.coord]
    canvas:
        Color
            rgba: self.bgcolor
        Rectangle
            pos: self.pos
            size: self.size

RelativeLayout
